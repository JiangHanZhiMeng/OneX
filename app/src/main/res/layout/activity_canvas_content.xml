<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.linsa.retrofitdemo.activity.CanvasContentActivity">


    <com.example.linsa.retrofitdemo.weidget.MyCanvasView
        android:id="@+id/mcv_acc_canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">


        <Button
            android:id="@+id/btn_acc_add_x"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="add x"/>

        <Button
            android:id="@+id/btn_acc_add_y"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="add y"/>

        <Button
            android:id="@+id/btn_acc_lower_x"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="lower x"/>

        <Button
            android:id="@+id/btn_acc_lower_y"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="lower y"/>



    </LinearLayout>


    <com.example.linsa.retrofitdemo.weidget.ZoomView
        android:id="@+id/zv_acc_scal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_acc_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white_80"
        android:layout_gravity="right|top"
        android:src="@mipmap/v5"/>

</FrameLayout>
